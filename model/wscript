#!/usr/bin/python3

from waflib.Context import Context
from glob import glob
from pathlib import Path
import os

instruments = ['SignalBoard']


def configure(ctx):
    pass


def build(ctx):
    for i in instruments:
        ctx(rule=f"blender -b -P ../model/{i}.py -- {i}",
            source=["../model/models.py", f"../model/{i}.py"], target=f"../{i}.blend")
